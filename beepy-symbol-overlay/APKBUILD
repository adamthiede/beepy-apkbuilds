pkgname=beepy-symbol-overlay
pkgver=1
pkgrel=0
pkgdesc="symbol overlay for beepy keyboard"
url="https://github.com/ardangelo/beepy-symbol-overlay"
arch="aarch64"
license="GPL-2.0-or-later"
makedepends="libdrm-dev linux-headers binutils"
source="$pkgname-$pkgver.tar.gz::https://github.com/adamthiede/beepy-symbol-overlay/archive/refs/tags/$pkgver.tar.gz"
options="!check" # no tests

build() {
	make
}

package() {
	install -Dm755 symbol-overlay "$pkgdir"/sbin/symbol-overlay
}

